        ask http://laravel.test/caddy-check
    }
    local_certs
    email niteric@gmail.com  # Replace with your email
}

localhost {
    reverse_proxy laravel.test:80
    tls internal  # Use Caddy's internal certificate authority for local testing
}
:443 {
    tls internal {
        on_demand
    }

    reverse_proxy laravel.test {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Port {server_port}
        header_up X-Forwarded-Proto {scheme}
        health_timeout 5s
    }
}
:80 {
    redir http://{host}{uri} permanent
}
